<link rel="stylesheet" type="text/css" href="/stylesheets/user-style-altered.css">
<h1>Everyone's Lego Sets</h1>
<hr>
<br>
<table class="lego-table">
    <tr>
        <td>
            <a href="/legos/new"><button class="new">New Lego Set</button></a>
        </td>
        <td>
            <a href="/user"><button class="new">View Your Legos</button></a>
        </td>
    </tr>
<% legos = Lego.all.order('name') %>
<% legos.each do |lego| %>
    <tr>
        <td>
            <% if current_user.id == lego.user.id %>
                <h3><a href="/legos/<%= lego.id %>/edit" ><%= lego.name %></a></h3>
            <% else %>
                <h3><%= lego.name %></h3>
            <% end %>
            <h4>Theme: <%= lego.theme.name %></h4>
            <h4>No. of Pieces: <%= lego.num_of_pieces %></h4>
            <h4>Owner: <%= lego.user.username %></h4>
        </td>
        <td>
            <img src="<%= lego.img_link %>"
        </td>

    </tr>
<% end %>
</table>