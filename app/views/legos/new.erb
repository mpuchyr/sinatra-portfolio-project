<h1>Create a Lego Set</h1>
<button><a href="/user">Back</a></button>
<br>
<br>
<form method="POST" action="/legos/new">
    <label for="name">Name: </label>
    <input type="text" name="name">
    <br>
    <label for="theme">Theme: </label>
    <% Theme.all.each do |theme| %>
        <input type="radio" name="theme" value="<%= theme.name %>"><%= theme.name %>
    <% end %>
    <br>
    <labe for="theme">New Theme: </label>
    <input type="text" name="new_theme">
    <br>
    <label for="num_of_pieces">No. of Pieces: </label>
    <input type="text" name="num_of_pieces">
    <br>
    <label for="img_link">Image Link (optional): </label>
    <input type="text" name="img_link">
    <br>
    <input type="submit" value="Create">
</form>

<% if @errors %>
    <% @errors.each do |error| %>
        <h3><%= error %></h3>
    <% end %>
<% end %>